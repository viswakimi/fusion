ScheduleService

<soap:Envelope xmlns:soap="http://www.w3.org/2003/05/soap-envelope"
               xmlns:sch="http://xmlns.oracle.com/oxp/service/ScheduleReportService">
   <soap:Header/>
   <soap:Body>
      <sch:scheduleReport>
         <scheduleRequest>
            <deliveryChannels>
               <ftpOptions>
                  <ftpServerName>TEST</ftpServerName>
                  <remoteFile>/home/ubuntu/outbound/invoice/Invoice2.csv</remoteFile>
                  <sftpOption>true</sftpOption>
               </ftpOptions>
            </deliveryChannels>
            <reportAttributes>
               <attributeFormat>csv</attributeFormat>
            </reportAttributes>
            <parameterNameValues>
               <listOfParamNameValues>
                  <name>p_source</name>
                  <values>PSIIF</values>
               </listOfParamNameValues>
               <listOfParamNameValues>
                  <name>p_inv_num</name>
                  <values>1620314</values>
               </listOfParamNameValues>
            </parameterNameValues>
            <reportAbsolutePath>/Custom/Financials/XXDEMO_RFT_TEMPLATE.xdo</reportAbsolutePath>
            <saveDataOption>true</saveDataOption>
            <saveOutputOption>true</saveOutputOption>
            <schedulePublicOption>true</schedulePublicOption>
            <userJobName>Test Job SOAP</userJobName>
         </scheduleRequest>
      </sch:scheduleReport>
   </soap:Body>
</soap:Envelope>

